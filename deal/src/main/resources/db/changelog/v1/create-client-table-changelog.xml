<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-client" author="j-kachalova">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client"/>
            </not>
        </preConditions>

        <createTable tableName="client">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="account_number" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="birth_date" type="date">
                <constraints nullable="true"/>
            </column>
            <column name="dependent_amount" type="integer">
                <constraints nullable="true"/>
            </column>
            <column name="email" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="first_name" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="gender" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="marital_status" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="middle_name" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="passport" type="jsonb">
                <constraints nullable="true"/>
            </column>
            <column name="employment" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>