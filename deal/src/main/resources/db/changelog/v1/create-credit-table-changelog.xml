<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-credit" author="j-kachalova">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="credit"/>
            </not>
        </preConditions>

        <createTable tableName="credit">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="amount" type="numeric">
                <constraints nullable="true"/>
            </column>
            <column name="credit_status" type="character varying(255)">
                <constraints nullable="true"/>
            </column>
            <column name="insurable_enabled" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="monthly_payment" type="numeric">
                <constraints nullable="true"/>
            </column>
            <column name="psk" type="numeric">
                <constraints nullable="true"/>
            </column>
            <column name="rate" type="numeric">
                <constraints nullable="true"/>
            </column>
            <column name="salary_client" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="term" type="integer">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>